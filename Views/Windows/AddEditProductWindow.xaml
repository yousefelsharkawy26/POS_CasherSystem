<ui:FluentWindow
    x:Class="POS_ModernUI.Views.Windows.AddEditProductWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:POS_ModernUI.Views.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="{Binding ViewModel.ApplicationTitle, Mode=OneWay}"
    d:DesignHeight="500" d:DesignWidth="800"
    d:DataContext="{d:DesignInstance local:AddEditProductWindow, IsDesignTimeCreatable=True}"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ExtendsContentIntoTitleBar="True"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    WindowBackdropType="Mica"
    WindowCornerPreference="Round"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d"
    FlowDirection="RightToLeft"
    xmlns:conv="clr-namespace:POS_ModernUI.Helpers">

    <ui:FluentWindow.Resources>
        <conv:DbImageToPhysicalPathConverter x:Key="ProductImageConverter"/>
        <conv:FractionConverter x:Key="FractionConverter"/>
        <conv:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <conv:CusBooleanToVisibility x:Key="CusBooleanToVisibility"/>
    </ui:FluentWindow.Resources>
    
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="361*" />
            <RowDefinition Height="6*"/>
        </Grid.RowDefinitions>
        
        <ContentPresenter x:Name="RootContentDialog"
                          Grid.Row="0"
                          Grid.RowSpan="2" />
        <ui:TitleBar x:Name="TitleBar"
                     Title="{Binding ViewModel.ApplicationTitle}"
                     CloseWindowByDoubleClickOnIcon="True" 
                     VerticalAlignment="Center">
            
            <ui:TitleBar.Icon>
                <ui:ImageIcon Source="pack://application:,,,/Assets/wpfui-icon-256.png" />
            </ui:TitleBar.Icon>
        </ui:TitleBar>

        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <ui:ProgressRing IsIndeterminate="True"
                             Visibility="{Binding ViewModel.IsBusy, Converter={StaticResource CusBooleanToVisibility}}"
                             Width="50" 
                             Height="50" 
                             Panel.ZIndex="10"
                             HorizontalAlignment="Center"/>
            <StackPanel Grid.Column="0">
                <ui:TextBlock x:Name="txtTitle"
                              Text="إضافة منتج جديد"
                              FontSize="24"
                              FontWeight="ExtraBold"
                              Margin="50, 30"
                              Appearance="Primary"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="130"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <ui:TextBlock Text="اسم المنتج :"
                                  Appearance="Secondary"
                                  Grid.Column="0"
                                  Margin="50, 20, 0, 10"/>
                    <ui:TextBox PlaceholderText="قم بكاتبة اسم المنتج ......"
                                x:Name="txtProductName"
                                Text="{Binding ViewModel.ProductName}"
                                Margin="30, 10, 50, 10"
                                Grid.Column="1"/>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <ui:Button Appearance="Secondary"
                               Content="{Binding ViewModel.QuantityUnitType}"
                               Margin="50, 20, 0, 10"
                               Icon="{ui:SymbolIcon Symbol=Add48}"
                               Command="{Binding ViewModel.AddProductUnitItemCommand}"/>

                    <DataGrid ItemsSource="{Binding ViewModel.NewProductUnits, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              MaxHeight="{Binding ActualHeight, Converter={StaticResource FractionConverter}, ConverterParameter=0.45}"
                              SelectedItem="{Binding ViewModel.SelectedProductUnit, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              VerticalScrollBarVisibility="Auto"
                              CanUserReorderColumns="False"
                              CanUserResizeColumns="False"
                              AutoGenerateColumns="False"
                              CanUserResizeRows="False"
                              CanUserAddRows="False"
                              SelectionMode="Single"
                              FontFamily="Calibri"
                              Margin="30, 10, 50, 10"
                              Grid.Column="1"
                              FontSize="15"
                              Padding="7">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="كود المنتج"
                                    HeaderStyle="{DynamicResource CenterGridHeaderStyle}"
                                    IsReadOnly="False"
                                    Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <ui:TextBox Text="{Binding ProductCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    KeyDown="TextBox_KeyDown"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="الكمية"
                                    HeaderStyle="{DynamicResource CenterGridHeaderStyle}"
                                    Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <ui:TextBox Text="{Binding Quantity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                    />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="عدد الوحدات في الوحدة الأكبر"
                                                    HeaderStyle="{DynamicResource CenterGridHeaderStyle}"
                                                    Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <ui:TextBox Text="{Binding QuantityPerParent, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    IsReadOnly="{Binding IsFirstRow}" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="السعر الواحدة"
                                HeaderStyle="{DynamicResource CenterGridHeaderStyle}"
                                Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <ui:TextBox Text="{Binding UnitCost, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="الوحدة"
                                                    HeaderStyle="{DynamicResource CenterGridHeaderStyle}"
                                                    Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <ComboBox ItemsSource="{Binding Units}"
                                                  DisplayMemberPath="Name" 
                                                  SelectedItem="{Binding SelectedUnit, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="عملیات"
                                    Width="85"
                                    HeaderStyle="{DynamicResource CenterGridHeaderStyle}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center">
                                            <Button Margin="4"
                                    Padding="7,5"
                                    CommandParameter="{Binding}"
                                    Command="{Binding Path=DataContext.ViewModel.DeleteProductUnitItemCommand, RelativeSource= {RelativeSource FindAncestor,AncestorType={x:Type DataGrid}}}">
                                                <ui:SymbolIcon Symbol="Delete16" />
                                                <Button.ToolTip>
                                                    <TextBlock Text="حذف"
                                               FontSize="14" />
                                                </Button.ToolTip>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>

                <ui:TextBlock Text="{Binding ViewModel.ErrorMessage}" 
                              HorizontalAlignment="Center"
                              Background="#FFFF4A4A" 
                              Foreground="#E4E9E5E5"
                              FontFamily="Cairo"
                              FontWeight="SemiBold"
                              TextDecorations="Underline"/>

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0 20">
                    <ui:Button Content="حفظ المنتج"
                               Width="200"
                               FontWeight="ExtraBold"
                               Cursor="Hand"
                               Appearance="Primary"
                               IsEnabled="{Binding ViewModel.IsBusy, Converter={StaticResource InverseBooleanConverter}}"
                               Click="SaveProductButton_Click"/>
                    <ui:Button Content="إلغاء" 
                               Command="{Binding ViewModel.ResetFieldsCommand}"
                               Width="100"
                               FontWeight="ExtraBold"
                               Cursor="Hand"
                               Appearance="Danger"/>
                </StackPanel>
            </StackPanel>

            <StackPanel FlowDirection="LeftToRight"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Grid.Column="1"
                        Margin="10,120,40,50">
                <ui:Image Source="{Binding ViewModel.ImageUrl, Converter={StaticResource ProductImageConverter}}"
                          Width="120"
                          Height="120"
                          x:Name="imgProduct"
                          Margin="0,10"/>
                
                <ui:Button Content="تحميل صورة"
                           Click="UploadImageButton_Click"
                           Margin="10,0,0,0"
                           Cursor="Hand"/>
            </StackPanel>
        </Grid>
    </Grid>
</ui:FluentWindow>