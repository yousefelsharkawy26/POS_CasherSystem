<ui:FluentWindow
    x:Class="POS_ModernUI.Views.Windows.AddEditProductWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:POS_ModernUI.Views.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="{Binding ViewModel.ApplicationTitle, Mode=OneWay}"
    d:DesignHeight="500" d:DesignWidth="800"
    d:DataContext="{d:DesignInstance local:AddEditProductWindow, IsDesignTimeCreatable=True}"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ExtendsContentIntoTitleBar="True"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    WindowBackdropType="Mica"
    WindowCornerPreference="Round"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d"
    FlowDirection="RightToLeft"
    xmlns:conv="clr-namespace:POS_ModernUI.Helpers">

    <ui:FluentWindow.Resources>
        <conv:DbImageToPhysicalPathConverter x:Key="ProductImageConverter"/>
    </ui:FluentWindow.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="361*" />
            <RowDefinition Height="6*"/>
        </Grid.RowDefinitions>
        
        <ContentPresenter x:Name="RootContentDialog"
                          Grid.Row="0"
                          Grid.RowSpan="2" />
        <ui:TitleBar x:Name="TitleBar"
                     Title="{Binding ViewModel.ApplicationTitle}"
                     CloseWindowByDoubleClickOnIcon="True" 
                     VerticalAlignment="Center">
            
            <ui:TitleBar.Icon>
                <ui:ImageIcon Source="pack://application:,,,/Assets/wpfui-icon-256.png" />
            </ui:TitleBar.Icon>
        </ui:TitleBar>

        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <ui:TextBlock x:Name="txtTitle"
                              Text="إضافة منتج جديد"
                              FontSize="24"
                              FontWeight="ExtraBold"
                              Margin="50, 30"
                              Appearance="Secondary"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="130"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <ui:TextBlock Text="اسم المنتج :"
                                  Appearance="Secondary"
                                  Grid.Column="0"
                                  Margin="50, 20, 0, 10"/>
                    <ui:TextBox PlaceholderText="قم بكاتبة اسم المنتج ......"
                                x:Name="txtProductName"
                                Text="{Binding ViewModel.ProductName}"
                                Margin="30, 10, 50, 10"
                                Grid.Column="1"/>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="130"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <ui:TextBlock Text="الكمية :"
                                  Appearance="Secondary"
                                  Grid.Column="0"
                                  Margin="50, 20, 0, 10"/>
                    <ui:TextBox PlaceholderText="أدخل الكمية ......"
                                x:Name="txtQuantity"
                                Text="{Binding ViewModel.ProductQuantity}"
                                Grid.Column="1"
                                Margin="30, 10, 50, 10"/>
                </Grid>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="130"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <ui:TextBlock Text="وحدة القياس :"
                                  Appearance="Secondary"
                                  Grid.Column="0"
                                  Margin="50, 20, 0, 10"/>
                    <ComboBox Grid.Column="1"
                              x:Name="cbUnits"
                              ItemsSource="{Binding ViewModel.Units}"
                              DisplayMemberPath="Name" 
                              SelectedValuePath="Name"
                              Margin="30, 10, 50, 10"
                              SelectedValue="قطعة"
                              SelectedItem="{Binding ViewModel.SelectedUnit}" />


                </Grid>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="130"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <ui:TextBlock Text="السعر :"
                                  x:Name="txtUnitPrice"
                                  Appearance="Secondary"
                                  Grid.Column="0"
                                  Margin="50, 20, 0, 10"/>
                    <ui:TextBox PlaceholderText="سعر القطعة الواحدة......"
                                Text="{Binding ViewModel.ProductUnitPrice}"
                                Grid.Column="1"
                                Margin="30, 10, 50, 10"/>
                </Grid>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="130"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <ui:TextBlock Text="كود المنتج :"
                                  Appearance="Secondary"
                                  Grid.Column="0"
                                  Margin="50, 20, 0, 10"/>
                    
                    <ui:TextBox PlaceholderText="الكود"
                                x:Name="txtBarcode"
                                Text="{Binding ViewModel.ProductBarCode}"
                                Margin="30, 10, 50, 10"
                                Grid.Column="1"/>
                </Grid>


                <ui:Button Content="حفظ المنتج"
                           HorizontalAlignment="Center"
                           Width="200"
                           FontWeight="ExtraBold"
                           Appearance="Primary"
                           Margin="0,40"
                           Cursor="Hand"
                           Click="SaveProductButton_Click"/>
            </StackPanel>

            <StackPanel FlowDirection="LeftToRight"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Grid.Column="1"
                        Margin="10,120,40,50">
                <ui:Image Source="{Binding ViewModel.ImageUrl, Converter={StaticResource ProductImageConverter}}"
                          Width="120"
                          Height="120"
                          x:Name="imgProduct"
                          Margin="0,10"/>
                
                <ui:Button Content="تحميل صورة"
                           Click="UploadImageButton_Click"
                           Margin="10,0,0,0"
                           Cursor="Hand"/>
            </StackPanel>
        </Grid>
    </Grid>
</ui:FluentWindow>