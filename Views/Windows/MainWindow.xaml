<ui:FluentWindow
    x:Class="POS_ModernUI.Views.Windows.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:POS_ModernUI.Views.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="{Binding ViewModel.ApplicationTitle, Mode=OneWay}"
    Width="1100" Height="650" d:DesignHeight="450" d:DesignWidth="800"
    d:DataContext="{d:DesignInstance local:MainWindow, IsDesignTimeCreatable=True}"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ExtendsContentIntoTitleBar="True"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    WindowBackdropType="Mica"
    WindowCornerPreference="Round"
    WindowStartupLocation="CenterScreen"
    WindowState="Maximized"
    mc:Ignorable="d"
    FlowDirection="RightToLeft"
    xmlns:conv="clr-namespace:POS_ModernUI.Helpers">

    <ui:FluentWindow.Resources>
        <conv:CusBooleanToVisibility x:Key="CusBooleanToVisibility" />
        <conv:DatetoTimeAgeConverter x:Key="DatetoTimeAgeConverter" />
    </ui:FluentWindow.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="361*" />
            <RowDefinition Height="6*"/>
        </Grid.RowDefinitions>

        <ui:DropDownButton Grid.Row="1" 
                           FlowDirection="LeftToRight"
                           HorizontalAlignment="Right"
                           CornerRadius="20"
                           Appearance="Secondary"
                           Margin="0 0 10 0"
                           Icon="{ui:SymbolIcon Symbol=AlertBadge16}">
            
            <ui:DropDownButton.Flyout>
                <ContextMenu>
                    <StackPanel Width="300" FlowDirection="RightToLeft">
                        <TextBlock Text="الاشعارات" 
                                   FontWeight="Bold" 
                                   Margin="10,5"/>
                        <Separator/>

                        <ItemsControl ItemsSource="{Binding ViewModel.Notifications.Notifications}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <ui:MenuItem Cursor="Hand"
                                                 Command="{Binding Path=DataContext.ViewModel.NavegateNotificationsCommand, RelativeSource= {RelativeSource FindAncestor,AncestorType={x:Type ItemsControl}}}"
                                                 CommandParameter="{Binding}">
                                        <ui:MenuItem.Icon>
                                            <ui:ImageIcon Source="/Images/white_shadow.png"
                                                          Width="13"
                                                          Height="12"
                                                          Visibility="{Binding IsRead, Converter={StaticResource CusBooleanToVisibility}}"/>
                                        </ui:MenuItem.Icon>
                                        <ui:MenuItem.Header>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>

                                                <StackPanel>
                                                    <StackPanel Orientation="Horizontal">
                                                        <ui:TextBlock Text="{Binding Title}"
                                                                      FontWeight="Bold"
                                                                      Margin="4,0,0,0"
                                                                      FontSize="14"
                                                                      Appearance="Secondary"/>
                                                        <ui:TextBlock Text="{Binding Timestamp, Converter={StaticResource DatetoTimeAgeConverter}}"
                                                                      Appearance="Secondary"
                                                                      Margin="20,0,0,0"
                                                                      Opacity="0.8"
                                                                      FontSize="12"/>
                                                    </StackPanel>
                                                    
                                                    <ui:TextBlock Text="{Binding Message}"
                                                                  Margin="4,0,0,0"
                                                                  FontSize="12"
                                                                  TextTrimming="CharacterEllipsis"
                                                                  MaxWidth="200"
                                                                  Appearance="Secondary"/>
                                                </StackPanel>

                                                <Button Margin="4"
                                                        Grid.Column="1"
                                                        Padding="7,5"
                                                        CommandParameter="{Binding}"
                                                        Command="{Binding Path=DataContext.ViewModel.RemoveNotificationCommand, RelativeSource= {RelativeSource FindAncestor,AncestorType={x:Type ui:FluentWindow}}}">
                                                    <ui:SymbolIcon Symbol="Delete16" />
                                                    <Button.ToolTip>
                                                        <TextBlock Text="حذف"
                                                                   FontSize="14" />
                                                    </Button.ToolTip>
                                                </Button>
                                            </Grid>
                                        </ui:MenuItem.Header>
                                    </ui:MenuItem>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <Separator/>
                        <ui:HyperlinkButton Content="الكل"
                                            HorizontalAlignment="Center"
                                            Appearance="Secondary"
                                            Margin="0,5"
                                            Cursor="Hand"/>
                    </StackPanel>
                </ContextMenu>
            </ui:DropDownButton.Flyout>
        </ui:DropDownButton>

        <ui:NavigationView
            x:Name="RootNavigation"
            Grid.Row="2"
            Padding="42,0,42,0"
            BreadcrumbBar="{Binding ElementName=BreadcrumbBar}"
            FooterMenuItemsSource="{Binding ViewModel.FooterMenuItems, Mode=OneWay}"
            FrameMargin="0"
            IsBackButtonVisible="Collapsed"
            IsPaneToggleVisible="True"
            MenuItemsSource="{Binding ViewModel.MenuItems, Mode=OneWay}"
            PaneDisplayMode="LeftMinimal"
            IsPaneOpen="False" Grid.RowSpan="2">
            <ui:NavigationView.Header>
                <ui:BreadcrumbBar x:Name="BreadcrumbBar" Margin="42,32,42,20" />
            </ui:NavigationView.Header>
            <ui:NavigationView.ContentOverlay>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="735*"/>
                        <ColumnDefinition Width="16*"/>
                    </Grid.ColumnDefinitions>
                    <ui:SnackbarPresenter x:Name="SnackbarPresenter" Grid.ColumnSpan="2" />
                </Grid>
            </ui:NavigationView.ContentOverlay>
        </ui:NavigationView>



        <ContentPresenter
            x:Name="RootContentDialog"
            Grid.Row="0"
            Grid.RowSpan="2" />

        <ui:TitleBar
            x:Name="TitleBar"
            Title="{Binding ViewModel.ApplicationTitle}"
            CloseWindowByDoubleClickOnIcon="True" VerticalAlignment="Center">
            <ui:TitleBar.Icon>
                <ui:ImageIcon Source="pack://application:,,,/Assets/wpfui-icon-256.png" />
            </ui:TitleBar.Icon>
        </ui:TitleBar>
    </Grid>
</ui:FluentWindow>
