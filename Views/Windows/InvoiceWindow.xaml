<Window x:Class="POS_ModernUI.Views.Windows.InvoiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        d:DataContext="{d:DesignInstance local:InvoiceWindow, IsDesignTimeCreatable=False}"
        xmlns:local="clr-namespace:POS_ModernUI.Views.Windows"
        mc:Ignorable="d"
        Title="Invoice" Width="302"
        ResizeMode="NoResize" 
        WindowStyle="None" 
        FontFamily="Roboto" 
        WindowStartupLocation="CenterScreen"
        FlowDirection="LeftToRight">
    <Grid x:Name="print"
          VerticalAlignment="Top"
          HorizontalAlignment="Left"
          Width="302">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <Image Source="/Assets/InvoiceLogo.jpg"
                   Width="90"/>
            <TextBlock Text="فاتورة الشراء"
                       FontSize="20"
                       Foreground="Black"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0 10 0 10"/>
        </StackPanel>
        <StackPanel Grid.Row="1" HorizontalAlignment="Stretch" Margin="20 0">
            <Grid Margin="0 0 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.3*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1.3*"/>
                    <ColumnDefinition Width="1.5*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="المنتج" Grid.Column="4" FontSize="10" FontWeight="DemiBold" HorizontalAlignment="Right"/>
                <TextBlock Text="سعر القطعة" Grid.Column="3" FontSize="10" FontWeight="DemiBold" HorizontalAlignment="Center"/>
                <TextBlock Text="الكمية" Grid.Column="2" FontSize="10" FontWeight="DemiBold" HorizontalAlignment="Center"/>
                <TextBlock Text="الوحدة" Grid.Column="1" FontSize="10" FontWeight="DemiBold" HorizontalAlignment="Center"/>
                <TextBlock Text="اجمالى السعر" Grid.Column="0" FontSize="10" FontWeight="DemiBold" HorizontalAlignment="Center"/>
            </Grid>
            <Rectangle Fill="Black" Height="1" Margin="0 3" Opacity="0.5"/>
            <ItemsControl ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          ItemsSource="{Binding SalesCasherModels}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1.3*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1.3*"/>
                                <ColumnDefinition Width="1.5*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="{Binding ProductName}" Grid.Column="4" HorizontalAlignment="Right"/>
                            <TextBlock Text="{Binding UnitPrice}" Grid.Column="3" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding Quantity}" Grid.Column="2" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding UnitName}" Grid.Column="1" HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding TotalPrice}" Grid.Column="0" HorizontalAlignment="Center" />
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="20 0">
            <Grid Margin="10 20 10 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="التاريخ" Grid.Column="3" FontSize="12" FontWeight="ExtraLight" HorizontalAlignment="Right"/>
                <TextBlock Text="اجمالى الفاتورة" Grid.Column="0" FontSize="12" FontWeight="ExtraLight" HorizontalAlignment="Left"/>
            </Grid>
            <Rectangle Fill="Black" Height="1" Margin="5" Opacity="0.5"/>
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="2">
                    <TextBlock Text="{Binding Date}" 
                               FontSize="10"
                               FontWeight="DemiBold"
                               Margin="5"
                               HorizontalAlignment="Right"/>
                </StackPanel>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="{Binding TotalAmount}"
                               FontSize="13"
                               Margin="5"
                               HorizontalAlignment="Left"
                               Foreground="Black"
                               FontWeight="DemiBold"/>
                </StackPanel>
            </Grid>
        </StackPanel>
        <!--<Image Source="{Binding BarCode}" 
               Stretch="Fill"
               Grid.Row="4"
               Margin="0 10"
               Width="200"
               Height="50"
               VerticalAlignment="Top"/>-->
    </Grid>
</Window>
