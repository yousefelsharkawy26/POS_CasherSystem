<ui:FluentWindow
    x:Class="POS_ModernUI.Views.Windows.AddNewPurchaseWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:POS_ModernUI.Views.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="{Binding ViewModel.ApplicationTitle, Mode=OneWay}"
    Width="850" Height="600" 
    d:DesignHeight="450" d:DesignWidth="800"
    d:DataContext="{d:DesignInstance local:AddNewPurchaseWindow, IsDesignTimeCreatable=True}"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ExtendsContentIntoTitleBar="True"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    WindowBackdropType="Mica"
    WindowCornerPreference="Round"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d"
    FlowDirection="RightToLeft"
    xmlns:conv="clr-namespace:POS_ModernUI.Helpers">

    <ui:FluentWindow.Resources>
        <conv:FractionConverter x:Key="FractionConverter"/>
    </ui:FluentWindow.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="361*" />
            <RowDefinition Height="6*"/>
        </Grid.RowDefinitions>
        
        <ContentPresenter x:Name="RootContentDialog"
                          Grid.Row="0"
                          Grid.RowSpan="2" />
        <ui:TitleBar x:Name="TitleBar"
                     Title="{Binding ViewModel.ApplicationTitle}"
                     CloseWindowByDoubleClickOnIcon="True" 
                     VerticalAlignment="Center">
            
            <ui:TitleBar.Icon>
                <ui:ImageIcon Source="pack://application:,,,/Assets/wpfui-icon-256.png" />
            </ui:TitleBar.Icon>
        </ui:TitleBar>

        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <ui:TextBlock x:Name="txtTitle"
                              Text="عملية شراء جديدة"
                              FontSize="24"
                              FontWeight="ExtraBold"
                              Margin="50, 20"
                              Appearance="Primary"
                              Foreground="WhiteSmoke"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <ui:TextBlock Text="المورد :"
                                  Appearance="Secondary"
                                  Grid.Column="0"
                                  Margin="50, 20, 0, 10"/>

                    <StackPanel Grid.Column="2">
                        <ui:TextBox PlaceholderText="اسم المورد ......"
                                    x:Name="txtSupplierName"
                                    Text="{Binding ViewModel.SupplierName}"
                                    Margin="10, 10, 50, 0"
                                    Height="35"
                                    />
                        <ui:TextBox PlaceholderText="رقم الهاتف ......"
                                    x:Name="txtSupplierPhone"
                                    Text="{Binding ViewModel.SupplierPhone}"
                                    Margin="10, 10, 50, 10"
                                    Height="35"
                                    Grid.Column="2"/>
                    </StackPanel>
                    <ComboBox Grid.Column="1"
                              Margin="30, 0, 20, 40"
                              ItemsSource="{Binding ViewModel.Suppliers}"
                              DisplayMemberPath="Name" 
                              SelectedValuePath="SupplierId"
                              SelectedValue="0"
                              SelectedItem="{Binding ViewModel.SelectedSupplier}"
                              SelectionChanged="ComboBox_SelectionChanged"/>
                </Grid>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <ui:Button Appearance="Secondary"
                               Icon="{ui:SymbolIcon Symbol=Add48}"
                               Command="{Binding ViewModel.AddPurchaseItemCommand}"/>
                    
                    <DataGrid ItemsSource="{Binding ViewModel.NewPurchaseOrders, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              MaxHeight="{Binding ActualHeight, Converter={StaticResource FractionConverter}, ConverterParameter=0.45}"
                              SelectedItem="{Binding ViewModel.SelectedPurchaseModel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              VerticalScrollBarVisibility="Auto"
                              CanUserReorderColumns="False"
                              CanUserResizeColumns="False"
                              AutoGenerateColumns="False"
                              CanUserResizeRows="False"
                              CanUserAddRows="False"
                              SelectionMode="Single"
                              FontFamily="Calibri"
                              Margin="10 0 0 20"
                              Grid.Column="1"
                              FontSize="15"
                              Padding="7">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="كود المنتج"
                                                    HeaderStyle="{DynamicResource CenterGridHeaderStyle}"
                                                    IsReadOnly="False"
                                                    Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <ui:TextBox Text="{Binding ProductCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    KeyDown="TextBox_KeyDown"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="إسم المنتج"
                                                    HeaderStyle="{DynamicResource CenterGridHeaderStyle}"
                                                    Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <ui:TextBox Text="{Binding ProductName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    IsReadOnly="{Binding IsReadOnly}"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="الكمية"
                                                    HeaderStyle="{DynamicResource CenterGridHeaderStyle}"
                                                    Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <ui:TextBox Text="{Binding Quantity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                                    />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="السعر الواحدة"
                                                    HeaderStyle="{DynamicResource CenterGridHeaderStyle}"
                                                    Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <ui:TextBox Text="{Binding UnitCost, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    IsReadOnly="{Binding IsReadOnly}"
                                                    />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="الوحدة"
                                                    HeaderStyle="{DynamicResource CenterGridHeaderStyle}"
                                                    Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <ComboBox ItemsSource="{Binding Units}"
                                                  SelectedItem="{Binding SelectedUnit, Mode=TwoWay}"
                                                  IsReadOnly="{Binding IsReadOnly}"
                                                  IsEditable="False"
                                                  DisplayMemberPath="Name"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="عملیات"
                                                    Width="85"
                                                    HeaderStyle="{DynamicResource CenterGridHeaderStyle}">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal"
                                                    HorizontalAlignment="Center">
                                            <Button Margin="4"
                                                    Padding="7,5"
                                                    CommandParameter="{Binding}"
                                                    Command="{Binding Path=DataContext.ViewModel.DeletePurchaseOrderItemCommand, RelativeSource= {RelativeSource FindAncestor,AncestorType={x:Type DataGrid}}}">
                                                <ui:SymbolIcon Symbol="Delete16" />
                                                <Button.ToolTip>
                                                    <TextBlock Text="حذف"
                                                               FontSize="14" />
                                                </Button.ToolTip>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
                <ui:Button Content="إنهاء العملية"
                           Click="Button_Click"
                           HorizontalAlignment="Center"
                           Width="200"
                           FontWeight="ExtraBold"
                           Appearance="Primary"
                           Margin="0,40"
                           Cursor="Hand"/>
            </StackPanel>
            
        </Grid>
    </Grid>
</ui:FluentWindow>