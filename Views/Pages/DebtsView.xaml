<Page x:Class="POS_ModernUI.Views.Pages.DebtsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:POS_ModernUI.Views.Pages"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:vm="clr-namespace:POS_ModernUI.ViewModels.Pages"
      xmlns:conv="clr-namespace:POS_ModernUI.Helpers" 
      xmlns:dialogs="clr-namespace:POS_ModernUI.Views.Dialogs"
      Title="DebtsPage"
      d:DataContext="{d:DesignInstance local:DebtsView,
                                          IsDesignTimeCreatable=False}"
      d:DesignHeight="800"
      d:DesignWidth="1400"
      ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      mc:Ignorable="d"
      FlowDirection="RightToLeft">

    <Page.Resources>
        <conv:DecimalToMoneyConverter x:Key="DecimalToMoneyConverter"/>
        <conv:PercentageConverter x:Key="PercentageConverter"/>
        <conv:CusBooleanToVisibility x:Key="CusBooleanToVisibility"/>
    </Page.Resources>
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <ui:TextBlock Text="تتبع الأرصدة، وتسجيل المدفوعات، ومراقبة التحصيلات في الوقت الحالى." 
                          FontSize="16"
                          Margin="10"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Top"
                          FontFamily="Cairo"
                          FontWeight="Bold"
                          Appearance="Primary"/>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <WrapPanel Orientation="Horizontal"
                            Margin="10"
                            HorizontalAlignment="Center">
                    <Border Width="280"
                            Height="100"
                            Margin="10 5"
                            CornerRadius="10"
                            BorderThickness="3 3 3 10">
                        <Border.BorderBrush>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <!-- اللون الأول -->
                                <GradientStop Color="#B650E0" Offset="0" />
                                <!-- اللون الثاني عند 70% -->
                                <GradientStop Color="#3399FF" Offset="0.7" />
                            </LinearGradientBrush>
                        </Border.BorderBrush>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition />
                            </Grid.RowDefinitions>

                            <ui:TextBlock Text="إجمالي الأرصدة"
                                          FontSize="16"
                                          FontWeight="Bold"
                                          Margin="5"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Top"
                                          FontFamily="Cairo"
                                          Appearance="Primary"/>
                            <ui:TextBlock Text="{Binding ViewModel.TotalDebts, Converter={StaticResource DecimalToMoneyConverter}}"
                                          Grid.Row="1"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          FontFamily="Cairo"
                                          FontSize="20"
                                          FontWeight="ExtraBold"
                                          Appearance="Secondary"/>

                        </Grid>
                    </Border>
                    <Border Width="280"
                            Height="100"
                            Margin="10 5"
                            CornerRadius="10"
                            BorderThickness="3 3 3 10">
                        <Border.BorderBrush>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <!-- اللون الأول -->
                                <GradientStop Color="#B650E0" Offset="0" />
                                <!-- اللون الثاني عند 70% -->
                                <GradientStop Color="#3399FF" Offset="0.7" />
                            </LinearGradientBrush>
                        </Border.BorderBrush>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition />
                            </Grid.RowDefinitions>

                            <ui:TextBlock Text="إجمالي المدفوع"
                                          FontSize="16"
                                          FontWeight="Bold"
                                          Margin="5"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Top"
                                          FontFamily="Cairo"
                                          Appearance="Primary"/>

                            <ui:TextBlock Text="{Binding ViewModel.PaidAmount, Converter={StaticResource DecimalToMoneyConverter}}"
                                          Grid.Row="1"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          FontFamily="Cairo"
                                          FontSize="20"
                                          FontWeight="ExtraBold"
                                          Appearance="Secondary"/>

                        </Grid>
                    </Border>
                    <Border Width="280"
                            Height="100"
                            Margin="10 5"
                            CornerRadius="10"
                            BorderThickness="3 3 3 10">
                        <Border.BorderBrush>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <!-- اللون الأول -->
                                <GradientStop Color="#B650E0" Offset="0" />
                                <!-- اللون الثاني عند 70% -->
                                <GradientStop Color="#3399FF" Offset="0.7" />
                            </LinearGradientBrush>
                        </Border.BorderBrush>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition />
                            </Grid.RowDefinitions>

                            <ui:TextBlock Text="قيد السداد"
                                          FontSize="16"
                                          FontWeight="Bold"
                                          Margin="5"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Top"
                                          FontFamily="Cairo"
                                          Appearance="Primary"/>

                            <ui:TextBlock Text="{Binding ViewModel.RemainingAmount, Converter={StaticResource DecimalToMoneyConverter}}"
                                          Grid.Row="1"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          FontFamily="Cairo"
                                          FontSize="20"
                                          FontWeight="ExtraBold"
                                          Appearance="Secondary"/>

                        </Grid>
                    </Border>
                    <Border Width="280"
                            Height="100"
                            Margin="10 5"
                            CornerRadius="10"
                            BorderThickness="3 3 3 10">
                        <Border.BorderBrush>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <!-- اللون الأول -->
                                <GradientStop Color="#B650E0" Offset="0" />
                                <!-- اللون الثاني عند 70% -->
                                <GradientStop Color="#3399FF" Offset="0.7" />
                            </LinearGradientBrush>
                        </Border.BorderBrush>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto" />
                                <RowDefinition />
                            </Grid.RowDefinitions>

                            <ui:TextBlock Text="نسبة المدفوعات"
                                          FontSize="16"
                                          FontWeight="Bold"
                                          Margin="5"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Top"
                                          FontFamily="Cairo"
                                          Appearance="Primary"/>

                            <ui:TextBlock Text="{Binding ViewModel.PersentageDebts, Converter={StaticResource PercentageConverter}}"
                                          Grid.Row="1"
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          FontFamily="Cairo"
                                          FontSize="20"
                                          FontWeight="ExtraBold"
                                          Appearance="Secondary"/>

                        </Grid>
                    </Border>
                </WrapPanel>

                <TextBlock Text="قائمة الديون"
                           Grid.Row="1"
                           FontSize="30"
                           FontWeight="Bold"
                           Margin="10 0"/>

                <Separator Grid.Row="2"/>

                <!--<ScrollViewer Margin="40"
                              Grid.Row="3">-->
                <ui:TextBlock Text="{Binding ViewModel.EmptyMessage}" 
                              Grid.Row="3"
                              FontSize="20"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Appearance="Secondary"
                              Visibility="{Binding ViewModel.IsEmpty, Converter={StaticResource CusBooleanToVisibility}}"/>
                <ItemsControl ItemsSource="{Binding ViewModel.CustomerDebts}"
                                  Grid.Row="3"
                                  Margin="0 40">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="5"
                                        CornerRadius="10">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1" Opacity=".1">
                                        <!-- رمادي فاتح -->
                                        <GradientStop Color="#F0F0F0" Offset="0" />
                                        <!-- رمادي متوسط -->
                                        <GradientStop Color="#CCCCCC" Offset="1" />
                                    </LinearGradientBrush>
                                </Border.Background>
                                <Grid Margin="12"
                                          Width="200">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <ui:TextBlock Text="{Binding CustomerName}"
                                                      FontSize="16"
                                                      FontWeight="Bold"
                                                      Margin="5 8"
                                                      HorizontalAlignment="Left"
                                                      VerticalAlignment="Top"
                                                      FontFamily="Cairo"
                                                      Appearance="Primary"/>

                                    <Grid Grid.Row="1"
                                              Margin="5">
                                        <ui:TextBlock Text="إجمالي:"
                                                      FontSize="14"
                                                      FontWeight="SemiBold"
                                                      HorizontalAlignment="Left"
                                                      VerticalAlignment="Top"
                                                      FontFamily="Cairo"
                                                      Appearance="Secondary"/>

                                        <ui:TextBlock Text="{Binding TotalDebt, Converter={StaticResource DecimalToMoneyConverter}}"
                                                          FontSize="14"
                                                          HorizontalAlignment="Right"
                                                          VerticalAlignment="Top"
                                                          FontFamily="Cairo"
                                                          Appearance="Primary"/>
                                    </Grid>

                                    <Grid Grid.Row="2"
                                              Margin="5">
                                        <ui:TextBlock Text="المدفوع:"
                                                      FontSize="14"
                                                      FontWeight="SemiBold"
                                                      HorizontalAlignment="Left"
                                                      VerticalAlignment="Top"
                                                      FontFamily="Cairo"
                                                      Appearance="Secondary"/>

                                        <ui:TextBlock Text="{Binding PaidAmount, Converter={StaticResource DecimalToMoneyConverter}}"
                                                          FontSize="14"
                                                          HorizontalAlignment="Right"
                                                          VerticalAlignment="Top"
                                                          FontFamily="Cairo"
                                                          Appearance="Primary"/>
                                    </Grid>

                                    <Grid Grid.Row="3"
                                              Margin="5">
                                        <ui:TextBlock Text="المتبقى:"
                                                      FontSize="14"
                                                      FontWeight="SemiBold"
                                                      HorizontalAlignment="Left"
                                                      VerticalAlignment="Top"
                                                      FontFamily="Cairo"
                                                      Appearance="Secondary"/>

                                        <ui:TextBlock Text="{Binding RemainingAmount, Converter={StaticResource DecimalToMoneyConverter}}"
                                                          FontSize="14"
                                                          HorizontalAlignment="Right"
                                                          VerticalAlignment="Top"
                                                          FontFamily="Cairo"
                                                          Appearance="Primary"/>
                                    </Grid>

                                    <ProgressBar Grid.Row="4"
                                                     Minimum="0" 
                                                     Maximum="100" 
                                                     Value="{Binding RemainingPercentage, Mode=OneWay}" 
                                                     Height="10"
                                                     Margin="2"/>

                                    <ui:TextBlock Text="{Binding RemainingPercentage, Converter={StaticResource PercentageConverter}}"
                                                      Grid.Row="5"
                                                      FontSize="12"
                                                      Margin="5 0 5 5"
                                                      FontWeight="SemiBold"
                                                      FontFamily="Cairo"
                                                      Appearance="Secondary"/>

                                    <StackPanel Orientation="Horizontal"
                                                    Grid.Row="6">
                                        <ui:Button Content="سداد"
                                                       Command="{Binding Path=DataContext.ViewModel.PayDebtCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                       CommandParameter="{Binding}"
                                                       Margin="1"
                                                       Width="98"
                                                       Appearance="Primary"/>

                                        <ui:Button Content="تفاصيل"
                                                       Command="{Binding DataContext.ViewModel.ViewDebtDetailsCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                                       CommandParameter="{Binding}"
                                                       Width="98"
                                                       Margin="1"
                                                       Appearance="Secondary"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <!--</ScrollViewer>-->
            </Grid>
        </Grid>
    </Grid>
</Page>
