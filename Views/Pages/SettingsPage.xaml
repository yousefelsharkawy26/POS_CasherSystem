<Page
    x:Class="POS_ModernUI.Views.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:POS_ModernUI.Helpers"
    xmlns:local="clr-namespace:POS_ModernUI.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="SettingsPage"
    d:DataContext="{d:DesignInstance local:SettingsPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d"
    Loaded="Page_Loaded">
    <Page.Resources>
        <helpers:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />
    </Page.Resources>

    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Orientation="Horizontal"
                        Margin="30">
                <ui:ToggleSwitch Margin="10 0"
                     Command="{Binding ViewModel.ChangeThemeCommand}"
                     IsChecked="{Binding ViewModel.IsDarkTheme}"/>
                <ui:TextBlock Text="Dark Mode"
                  FontSize="15"
                  FontWeight="Bold"
                  Appearance="Primary"/>

            </StackPanel>

        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="{Binding ViewModel.CountDown}"
                       Grid.Column="1"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontSize="20"
                       FontWeight="Heavy"/>
            <StackPanel FlowDirection="RightToLeft">
                <ComboBox ItemsSource="{Binding ViewModel.ScheduleChoices}"
                          SelectedItem="{Binding ViewModel.SelectedScheduleDomain}"
                          Margin="20"/>

                <StackPanel Orientation="Horizontal"
                            Margin="20"
                            VerticalAlignment="Center">
                    <ui:Button Content="📦 تأكيد ميعاد النسخ"
                               FontWeight="Bold"
                               Appearance="Primary"
                               Command="{Binding ViewModel.SubmitChangeScheduleDomainCommand}"/>

                    <ui:Button Content="📦 إنشاء نسخة احتياطية الآن" 
                               FontWeight="Bold"
                               Appearance="Primary"
                               Command="{Binding ViewModel.ManualBackupCommand}"/>

                    <ui:Button Content="إسترجاع النسخه الاحتياطية"
                               FontWeight="Bold"
                               Appearance="Secondary"
                               Command="{Binding ViewModel.RestoreBackupCommand}"/>
                </StackPanel>
            </StackPanel>
        </Grid>
        
        <StackPanel Grid.Row="2"
                    VerticalAlignment="Bottom">
            <TextBlock
                FontSize="20"
                FontWeight="Medium"
                Text="About POS_ModernUI"/>

            <TextBlock Text="{Binding ViewModel.AppVersion, Mode=OneWay}"
                       Margin="0 50 0 0"/>
        </StackPanel>
    </Grid>
</Page>
