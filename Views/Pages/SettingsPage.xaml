<Page
    x:Class="POS_ModernUI.Views.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:POS_ModernUI.Helpers"
    xmlns:local="clr-namespace:POS_ModernUI.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="SettingsPage"
    d:DataContext="{d:DesignInstance local:SettingsPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d"
    FlowDirection="RightToLeft">
    <Page.Resources>
        <helpers:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />
    </Page.Resources>

    <StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            
            <TextBlock FontSize="20"
                       FontWeight="Medium"
                       Text="السمات" />

            <StackPanel Orientation="Horizontal"
                        Margin="30">
                <ui:ToggleSwitch Margin="10 0"
                     Command="{Binding ViewModel.ChangeThemeCommand}"
                     IsChecked="{Binding ViewModel.IsDarkTheme}"/>
                <ui:TextBlock Text="Dark"
                  FontSize="15"
                  FontWeight="Bold"
                  Appearance="Primary"/>

            </StackPanel>

            <!--<ui:Image Source="{Binding ViewModel.IpQRImage}"
                      Width="150"
                      Height="150"
                      Grid.Column="1"/>-->

        </Grid>

        <TextBlock FontSize="20"
                   FontWeight="Medium"
                   Text="إعدادت المستخدم" 
                   Margin="0 10 0 30"/>

        <Grid Margin="200 10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="اسم المستخدم"/>
            <ui:TextBox Grid.Column="1"
                        Text="{Binding ViewModel.UserName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        </Grid>
        <Grid Margin="200 10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="كلمة السر"/>
            <ui:PasswordBox Grid.Column="1"
                Password="{Binding ViewModel.Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        </Grid>
        <ui:Button Content="تغيير"
                   HorizontalAlignment="Center"
                   Width="200"
                   Appearance="Light"
                   Command="{Binding ViewModel.ChangeUserNameAndPasswordCommand}"/>
        <TextBlock
            Margin="0,24,0,0"
            FontSize="20"
            FontWeight="Medium"
            Text="About POS_ModernUI" />
        <TextBlock Margin="0,12,0,0" Text="{Binding ViewModel.AppVersion, Mode=OneWay}" />
    </StackPanel>
</Page>
