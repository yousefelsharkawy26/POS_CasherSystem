<ui:ContentDialog x:Class="POS_ModernUI.Views.Dialogs.NewDebtOrderDialog"
                  xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                  xmlns:local="clr-namespace:POS_ModernUI.Views.Dialogs" 
                  xmlns:conv="clr-namespace:POS_ModernUI.Helpers"
                  mc:Ignorable="d" 
                  ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
                  ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                  d:DesignHeight="600" d:DesignWidth="500"
                  DialogMaxWidth="1400"
                  CloseButtonText="إغلاق"
                  Title="اضافة الى المديونيات"
                  FlowDirection="RightToLeft"
                  IsFooterVisible="False">
    
    <ui:ContentDialog.Resources>
        <conv:CusBooleanToVisibility x:Key="CusBooleanToVisibility"/>
        <conv:FractionConverter x:Key="FractionConverter"/>
        
        <Style BasedOn="{StaticResource {x:Type ui:ContentDialog}}" 
	           TargetType="{x:Type local:NewDebtOrderDialog}" />
    </ui:ContentDialog.Resources>

    <Border Margin="40">
        <StackPanel>
            <ComboBox ItemsSource="{Binding CustomerList}"
                    SelectedItem="{Binding SelectedCustomer, Mode=TwoWay}"
                    DisplayMemberPath="Name"
                    Margin="10"/>

            <!--Customers Register if not exist-->
            <ui:TextBox Text="{Binding CustomerName, Mode=TwoWay}"
                    Visibility="{Binding IsNewCustomer, Converter={StaticResource CusBooleanToVisibility}}"
                    PlaceholderText="اسم العميل"
                    Margin="10"/>
            <ui:TextBox Text="{Binding CustomerPhone, Mode=TwoWay}"
                    Visibility="{Binding IsNewCustomer, Converter={StaticResource CusBooleanToVisibility}}"
                    PlaceholderText="رقم الهاتف"
                    Margin="10"/>
            <ui:TextBox Text="{Binding CustomerAddress, Mode=TwoWay}"
                    Visibility="{Binding IsNewCustomer, Converter={StaticResource CusBooleanToVisibility}}"
                    PlaceholderText="العنوان"
                    Margin="10"/>

            <ui:TextBox Text="{Binding CustomerNotes, Mode=TwoWay}"
                    PlaceholderText="إضافة ملاحظات"
                    Margin="10"/>

            <ui:TextBlock Text="المبلغ المدفوع"
                          Margin="10"
                          FontSize="20"
                          FontFamily="Cairo"
                          Appearance="Primary"
                          HorizontalAlignment="Center"/>

            <ui:TextBox Text="{Binding PaidAmount, Mode=TwoWay}"
                    PlaceholderText="المبلغ المدفوع..."
                    Margin="10"/>
            
            <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="10">
                
                <ui:Button Content="اضافة"
                           Click="AddDebtClick"
                           Appearance="Success"
                           Width="300"/>
                
                <ui:Button Content="الغاء"
                           Click="Button_Click"
                           Appearance="Danger"
                           Width="100"/>
            </StackPanel>
        </StackPanel>
    </Border>
</ui:ContentDialog>
