<ui:ContentDialog x:Class="POS_ModernUI.Views.Dialogs.DebtOrderDetailsDialog"
                  xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                  xmlns:local="clr-namespace:POS_ModernUI.Views.Dialogs" 
                  xmlns:conv="clr-namespace:POS_ModernUI.Helpers"
                  mc:Ignorable="d" 
                  ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
                  ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                  d:DesignHeight="500" d:DesignWidth="850"
                  DialogMaxWidth="1400"
                  CloseButtonText="إغلاق"
                  Title="دفع الدين"
                  FlowDirection="RightToLeft">

    <ui:ContentDialog.Resources>
        <Style BasedOn="{StaticResource {x:Type ui:ContentDialog}}" 
			   TargetType="{x:Type local:DebtOrderDetailsDialog}" />

        <conv:DecimalToMoneyConverter x:Key="DecimalToMoneyConverter"/>
    </ui:ContentDialog.Resources>

    <Grid Width="900"
          VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- بيانات العميل -->
        <ui:Card Margin="10" 
                 Padding="25 16"
                 Width="300"
                 Grid.Column="0"
                 VerticalAlignment="Top">
            <StackPanel>
                <StackPanel Orientation="Horizontal" 
                            VerticalAlignment="Center"
							Margin="10">
                    <ui:SymbolIcon Symbol="BookContacts24" 
									Width="28" 
									Height="28"/>
                    <ui:TextBlock Text="{Binding CustomerName}" 
									FontWeight="Bold" 
									FontSize="20"
									Appearance="Primary"/>
                </StackPanel>
                <Grid Margin="15 5">
                    <StackPanel HorizontalAlignment="Left"
								Orientation="Horizontal">
                        <ui:SymbolIcon Symbol="Money24" Width="20" Height="20" Margin="0,0,6,0"/>
                        <ui:TextBlock Text="إجمالي الدين:" FontWeight="SemiBold"/>
                    </StackPanel>
                    <ui:TextBlock Text="{Binding TotalDebt, Converter={StaticResource DecimalToMoneyConverter}}" 
									Margin="6,0,0,0"
									HorizontalAlignment="Right"/>
                </Grid>
                <Grid Margin="15 5">
                    <StackPanel HorizontalAlignment="Left"
								Orientation="Horizontal">
                        <ui:SymbolIcon Symbol="Savings24" Width="20" Height="20" Margin="0,0,6,0"/>
                        <ui:TextBlock Text="المتبقي:" FontWeight="SemiBold"/>
                    </StackPanel>
                    <ui:TextBlock Text="{Binding RemainingAmount, Converter={StaticResource DecimalToMoneyConverter}}" 
									Margin="6,0,0,0"
									HorizontalAlignment="Right"/>
                </Grid>
            </StackPanel>
        </ui:Card>

        <!-- المدفوعات السابقة -->
        <ui:Card Grid.Column="1"
				 Width="600"
                 MinHeight="400">
            <StackPanel>
                <ui:TextBlock Text="الاوردرات"
                              FontWeight="Bold"
                              Appearance="Primary"
                              FontSize="15"
                              Margin="0,0,0,6"/>

                <ItemsControl ItemsSource="{Binding Invoices}"
                              MinHeight="400">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Expander Margin="5 2"
                                      Background="#FFE0E0E0"
                                      BorderBrush="#FFB0BEC5"
                                      BorderThickness="1"
                                      Padding="0">
                                <Expander.Header>
                                    <Grid Margin="10">
                                        <!--Insert your header content here-->
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <ui:TextBlock Text="رقم الفاتورة:" 
                                                      FontWeight="Bold" 
                                                      Grid.Column="0"
                                                      Foreground="#222"/>
                                        <ui:TextBlock Text="{Binding SalesOrderId}"
                                                      Grid.Column="1"
                                                      Margin="0,0,10,0"
                                                      Foreground="#333"/>
                                        <ui:TextBlock Text="تاريخ الفاتورة:"
                                                      FontWeight="Bold"
                                                      Grid.Column="2"
                                                      Margin="0,0,10,0"
                                                      Foreground="#222"/>
                                        <ui:TextBlock Text="{Binding Date}"
                                                      Grid.Column="3"
                                                      Margin="0,0,10,0"
                                                      Foreground="#333"/>
                                        <ui:TextBlock Text="إجمالى المبلغ:"
                                                      FontWeight="Bold"
                                                      Grid.Column="4"
                                                      Margin="0,0,10,0"
                                                      Foreground="#222"/>
                                        <ui:TextBlock Text="{Binding TotalAmount}"
                                                      Grid.Column="5"
                                                      Margin="0,0,10,0"
                                                      Foreground="#222"/>
                                    </Grid>
                                </Expander.Header>
                                <StackPanel >
                                    <ItemsControl ItemsSource="{Binding SalesOrderItems}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="#FFF5F5F5" 
                                                        CornerRadius="3" 
                                                        Padding="8"
                                                        Margin="0,5,0,0">
                                                    <Grid Margin="10">
                                                        <!--Insert your header content here-->
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <ui:TextBlock Text="المنتج:"
                                                                        FontWeight="Bold"
                                                                        Margin="0,0,10,0"
                                                                        Grid.Column="0"
                                                                        Foreground="#222"/>
                                                        <ui:TextBlock Text="{Binding Product.Name}"
                                                                        Margin="0,0,10,0"
                                                                        Grid.Column="1"
                                                                        Foreground="#333"/>
                                                        <ui:TextBlock Text="الكمية:"
                                                                        Grid.Column="2"
                                                                        FontWeight="Bold"
                                                                        Margin="0,0,10,0"
                                                                        Foreground="#222"/>
                                                        <ui:TextBlock Text="{Binding Quantity}"
                                                                        Margin="0,0,10,0"
                                                                        Grid.Column="3"
                                                                        Foreground="#333"/>
                                                        <ui:TextBlock Text="سعر الواحدة:"
                                                                        FontWeight="Bold"
                                                                        Grid.Column="4"
                                                                        Margin="0,0,10,0"
                                                                        Foreground="#222"/>
                                                        <ui:TextBlock Text="{Binding UnitCost, Converter={StaticResource DecimalToMoneyConverter}}"
                                                                        Margin="0,0,10,0"
                                                                        Grid.Column="5"
                                                                        Foreground="#333"/>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Expander>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ui:Card>

    </Grid>
</ui:ContentDialog>
