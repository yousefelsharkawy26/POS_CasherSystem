<ui:ContentDialog x:Class="POS_ModernUI.Views.Dialogs.PayDebtDialog"
                  xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                  xmlns:local="clr-namespace:POS_ModernUI.Views.Dialogs" 
                  xmlns:conv="clr-namespace:POS_ModernUI.Helpers"
                  mc:Ignorable="d" 
                  ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
                  ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                  d:DesignHeight="500" d:DesignWidth="850"
                  DialogMaxWidth="1400"
                  CloseButtonText="إغلاق"
                  Title="دفع الدين"
                  FlowDirection="RightToLeft"
                  IsFooterVisible="False">

    <ui:ContentDialog.Resources>
        <Style BasedOn="{StaticResource {x:Type ui:ContentDialog}}" 
			   TargetType="{x:Type local:PayDebtDialog}" />

        <conv:DecimalToMoneyConverter x:Key="DecimalToMoneyConverter"/>
    </ui:ContentDialog.Resources>

    <Grid Width="900"
          VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel>
            <!-- بيانات العميل -->
            <ui:Card Margin="10" Padding="25 16">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" 
								VerticalAlignment="Center"
								Margin="10">
                        <ui:SymbolIcon Symbol="BookContacts24" 
									   Width="28" 
									   Height="28"/>
                        <ui:TextBlock Text="{Binding CustomerName}" 
									  FontWeight="Bold" 
									  FontSize="20"
									  Appearance="Primary"/>
                    </StackPanel>
                    <Grid Margin="15 5">
                        <StackPanel HorizontalAlignment="Left"
									Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="Money24" Width="20" Height="20" Margin="0,0,6,0"/>
                            <ui:TextBlock Text="إجمالي الدين:" FontWeight="SemiBold"/>
                        </StackPanel>
                        <ui:TextBlock Text="{Binding TotalDebt, Converter={StaticResource DecimalToMoneyConverter}}" 
									  Margin="6,0,0,0"
									  HorizontalAlignment="Right"/>
                    </Grid>
                    <Grid Margin="15 5">
                        <StackPanel HorizontalAlignment="Left"
									Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="Savings24" Width="20" Height="20" Margin="0,0,6,0"/>
                            <ui:TextBlock Text="المتبقي:" FontWeight="SemiBold"/>
                        </StackPanel>
                        <ui:TextBlock Text="{Binding RemainingAmount, Converter={StaticResource DecimalToMoneyConverter}}" 
									  Margin="6,0,0,0"
									  HorizontalAlignment="Right"/>
                    </Grid>
                </StackPanel>
            </ui:Card>

            <Separator Margin="20 0"/>

            <!-- إدخال المبلغ الجديد -->
            <ui:Card Margin="10 0" Padding="14">
                <StackPanel>
                    <ui:TextBlock Text="المبلغ الجديد" FontWeight="Bold" Margin="0,0,0,6"/>
                    <ui:TextBox
                        Text="{Binding NewPaymentAmount, UpdateSourceTrigger=PropertyChanged}"
                        PlaceholderText="أدخل المبلغ المدفوع"
                        FontSize="16"
                        Height="38"
                        HorizontalContentAlignment="Left"/>
                    <!-- رسالة خطأ أو نجاح (اختياري) -->
                    <ui:TextBlock Text="{Binding ErrorMessage}" 
								  Foreground="Red" 
								  FontWeight="SemiBold" 
								  FontSize="13"
                                  Margin="5"/>
                    <ui:Button
                        Content="تأكيد الدفع"
						HorizontalAlignment="Center"
						Click="ConfirmPaymentButton_Click"
                        Appearance="Primary"
                        FontWeight="Bold"
                        Margin="0 4"
						Width="300"/>
                    <ui:Button Content="إلغاء"
						       HorizontalAlignment="Center"
						       Click="Close_Click"
                               Appearance="Danger"
                               FontWeight="Bold"
						       Width="300"/>
                </StackPanel>
            </ui:Card>
        </StackPanel>

        <!-- المدفوعات السابقة -->
        <ui:Card Grid.Column="1"
				 Width="400">
            <StackPanel>
                <ui:TextBlock Text="المدفوعات السابقة"
                              FontWeight="Bold"
                              FontSize="15"
                              Margin="0,0,0,6"/>
                <ListView ItemsSource="{Binding OldPayments}" 
						  BorderThickness="0"
						  Height="290"
						  HorizontalAlignment="Center"
						  Background="Transparent">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#FFF6F6F6" 
									CornerRadius="6" 
									Margin="0,0,0,6" 
									Padding="6"
									Width="300">
                                <StackPanel Orientation="Vertical" 
											VerticalAlignment="Center">
                                    <StackPanel Orientation="Horizontal">
                                        <ui:SymbolIcon Symbol="CalendarDate24" Width="18" Height="18" Margin="0,0,4,0"/>
                                        <TextBlock Text="{Binding Date, StringFormat=yyyy/MM/dd}" FontWeight="SemiBold" Margin="0,0,8,0"/>
                                        <ui:SymbolIcon Symbol="MoneyHand24" Width="18" Height="18" Margin="0,0,4,0"/>
                                        <TextBlock Text="{Binding Amount}" Margin="0,0,8,0"/>
                                    </StackPanel>
                                    <ui:TextBlock Text="{Binding Note}" Appearance="Secondary" FontSize="12"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </ui:Card>

    </Grid>
</ui:ContentDialog>
