<ui:ContentDialog x:Class="POS_ModernUI.Views.Dialogs.AddEditCustomerDialog"
                  xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                  xmlns:local="clr-namespace:POS_ModernUI.Views.Dialogs" 
                  xmlns:conv="clr-namespace:POS_ModernUI.Helpers"
                  mc:Ignorable="d" 
                  ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
                  ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                  d:DesignHeight="400" d:DesignWidth="450"
                  DialogMaxWidth="1400"
                  FlowDirection="RightToLeft"
                  CloseButtonAppearance="Transparent"
                  CloseButtonText="">
    
    <ui:ContentDialog.Resources>
        <conv:CusBooleanToVisibility x:Key="CusBooleanToVisibility"/>
        <Style BasedOn="{StaticResource {x:Type ui:ContentDialog}}" 
           TargetType="{x:Type local:AddEditCustomerDialog}" />
        
        
    </ui:ContentDialog.Resources>

    <StackPanel VerticalAlignment="Center">
        <!--Customers Register if not exist-->
        <ui:TextBox Text="{Binding CustomerName, Mode=TwoWay}"
            PlaceholderText="اسم العميل"
            Margin="10"
            Width="300"
            Height="40"/>
        <ui:TextBox Text="{Binding CustomerPhone, Mode=TwoWay}"
            PlaceholderText="رقم الهاتف"
            Margin="10"
            Width="300"
            Height="40"/>
        <ui:TextBox Text="{Binding CustomerAddress, Mode=TwoWay}"
            PlaceholderText="العنوان"
            Margin="10"
            Width="300"
            Height="40"/>

        <ui:TextBox Text="{Binding DialogNotes, Mode=TwoWay}"
            PlaceholderText="إضافة ملاحظات"
            Margin="10"
            Width="300"
            Height="40"/>

        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <ui:Button Content="حفظ"
                       Appearance="Primary"
                       Click="Save_Click"
                       Width="150"/>
            
            <ui:Button Content="إلغاء"
                       Appearance="Danger"
                       Click="Close_Click"
                       Width="150"/>
        </StackPanel>
    </StackPanel>
</ui:ContentDialog>
